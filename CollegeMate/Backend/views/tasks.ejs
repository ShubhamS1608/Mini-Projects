<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WeChat</title>
</head>
<body>
  <h2>CollegeMate</h2>

  <!-- Add New Chat -->
  <form action="/add" method="POST">
    <input type="text" name="message" placeholder="Type a message" required>
    <button type="submit">Send</button>
  </form>

  <hr>

  <!-- Show All Chats -->
  <ul>
    <% chats.forEach(chat => { %>
      <li>
        <%= chat.message %>

        <!-- Update Chat -->
        <form action="/update/<%= chat._id %>" method="POST" style="display:inline;">
          <input type="text" name="newMessage" placeholder="Edit message">
          <button type="submit">Update</button>
        </form>

        <!-- Delete Chat -->
        <form action="/delete/<%= chat._id %>" method="POST" style="display:inline;">
          <button type="submit">‚ùå Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>

</body>
</html>
